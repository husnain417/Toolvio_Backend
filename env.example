# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database?options
MONGODB_URI=mongodb://localhost:27017/craftsman_dynamic_backend

# MongoDB connection options (optional, defaults will be used if not specified)
# MONGODB_OPTIONS={"maxPoolSize":10,"serverSelectionTimeoutMS":5000}

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origin (use * for development, specific domain for production)
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request body size limit
BODY_PARSER_LIMIT=10mb

# JWT configuration (required in production)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug logging
DEBUG=false

# Enable API documentation
ENABLE_SWAGGER=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Enable compression
ENABLE_COMPRESSION=true

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development
# NODE_ENV=development
# MONGODB_URI=mongodb://localhost:27017/craftsman_dev
# LOG_LEVEL=debug
# CORS_ORIGIN=*

# Staging
# NODE_ENV=staging
# MONGODB_URI=mongodb://staging-mongo:27017/craftsman_staging
# LOG_LEVEL=info
# CORS_ORIGIN=https://staging.craftsman.com

# Production
# NODE_ENV=production
# MONGODB_URI=mongodb://prod-mongo:27017/craftsman_prod
# LOG_LEVEL=warn
# CORS_ORIGIN=https://craftsman.com
# JWT_SECRET=your-production-jwt-secret-key
# ENABLE_COMPRESSION=true
# ENABLE_SECURITY_HEADERS=true
